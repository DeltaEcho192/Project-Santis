div(id="modal" class="uk-modal" style="display:block;")
	div(class="uk-modal-dialog uk-modal-body")
		h2(class="uk-modal-title">Update Dialog)
		p Update Items Values

		form(_="on submit take .uk-open from #modal")
			div(class="uk-margin")
				input(class="uk-input" placeholder="Item Name" value=`${item.item_name}` name="item_name")
				select#category(name="category")
					each cat in cats 
						option(value=cat)=cat
			button(type="button" class="uk-button uk-button-primary" hx-put=`/item/${item.item_id}` 
				hx-target=`#p${item.item_id}`
				hx-swap="outerHTML"
				_="on htmx:afterOnLoad wait 10ms then remove #modal"
			) Save
			button(type="button" class="uk-button uk-button-primary" hx-delete=`/item/${item.item_id}` 
				hx-target=`#p${item.item_id}`
				hx-swap="outerHTML"
				_="on htmx:afterOnLoad wait 10ms then remove #modal"
			) DELETE 
			button(
				id="cancelButton"
				type="button" 
				class="uk-button uk-button-default" 
				_="on click take .uk-open from #modal wait 200ms then remove #modal") Close
